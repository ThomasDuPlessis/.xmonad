
Config { 

   -- appearance
     font =         "xft:Bitstream inconsolata:size=7:bold:antialias=true"
   , bgColor =      "#3f3f3f"
   , fgColor =      "#dcdccc"
   , position =     Top
   , border =      NoBorder 
   , borderColor =  "black"

   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = "%StdinReader% }{%battery% | %multicpu% | %coretemp% | %memory% | %dynnetwork% | <fc=#dcdccc> [</fc>%vol%<fc=#dcdccc>] </fc> | %date%"

   , lowerOnStart =     False    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   --, pickBroadest =     False   -- pick the montior with widest monitor instead of the first
   , persistent =       True    -- enable/disable hiding (True = disabled)

  , commands = 
        -- network activity monitor (dynamic interface resolution)
        [
        Run DynNetwork     [ "--template" , "<fc=#dca3a3> <dev>: </fc> <tx>kB/s|<rx>kB/s"
                             , "--Low"      , "1000"       -- units: kB/s
                             , "--High"     , "5000"       -- units: kB/s
                             , "--low"      , "#dcdccc"
                             , "--normal"   , "#dcdccc"
                             , "--high"     , "#dcdccc"
                             ] 10

        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "<fc=#dca3a3> Cpu:</fc> <total0>%|<total1>%|<total2>%|<total3>%"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "#dcdccc"
                             , "--normal"   , "#dcdccc"
                             , "--high"     , "#dcdccc"
                             ] 10

        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "<fc=#dca3a3> T: </fc> <core0>°C"
                             , "--Low"      , "70"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "#dcdccc"
                             , "--normal"   , "#dcdccc"
                             , "--high"     , "#dcdccc"
                             ] 50
                          
        -- memory usage monitor
        , Run Memory         [ "--template" ,"<fc=#dca3a3>Mem: </fc><usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "#dcdccc"
                             , "--normal"   , "#dcdccc"
                             , "--high"     , "#dcdccc"
                             ] 10

        -- battery monitor
        , Run Battery        [ "--template" , "<fc=#dca3a3>Bat:</fc> <acstatus>"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "#dcdccc"
                             , "--normal"   , "#dcdccc"
                             , "--high"     , "#dcdccc"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>% (<timeleft>)"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#60b48a>Charging</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=#60b48a>Charged</fc>"
                             ] 50
        , Run StdinReader  
        -- time and date indicator 
        --   (%F = y-m-d date, %a = day of week, %T = h:m:s time)
        , Run Date           "<fc=#dca3a3> %b </fc><fc=#dcdccc> %_d  %Y %H:%M</fc>" "date" 10

        -- keyboard layout indicator
        -- , Run Kbd            [ ("us(dvorak)" , "<fc=#93a1a1>DV</fc>")
        --                      , ("us"         , "<fc=#93a1a1>US</fc>")
        --                      ]
	, Run Com "bash" ["/home/thomasduplessis/getVolume.sh"] "vol" 10

        ]
   }
