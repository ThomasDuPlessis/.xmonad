#!/bin/bash
foreground=$1
background=$2
font=$3

# Check to see if external is connected, if it is, we assume its 4K 
if [[ -z `xrandr | grep " connected" | grep 'VGA'` ]]; then
	conky -qc /home/tom/.xmonad/.conky_dzen | dzen2 -x '1600' -w '2240' -h '40'  -ta 'r' -bg $background -fg $foreground -y '0' -fn $font -dock &
#	conky -qc /home/tom/.xmonad/.conky_dzen1 | dzen2 -x '0' -w '1120' -ta 'l' -bg $background -fg $foreground -y '0' -fn $font -dock &
else 
	#nitrogen --restore
	conky -qc /home/tom/.xmonad/.conky_dzen | dzen2 -x '1600' -w '1600'  -h '40' -ta 'r' -bg $background -fg $foreground -y '0' -fn $font -dock &
	conky -qc /home/tom/.xmonad/.conky_dzen1 | dzen2 -x '0' -w '1600'  -h '40'  -ta 'l' -bg $background -fg $foreground -y '0' -fn $font -dock &
	#conky -qc /home/sunn/.xmonad/.conky_dzen2 | dzen2 -x '1200' -w '720' -h '14' -ta 'r' -bg $background -fg $foreground -y '0' -fn $font -dock &
	#conky -qc /home/sunn/.xmonad/.conky_dzen3 | dzen2 -x '1200' -w '720' -h '14' -ta 'r' -bg $background -fg $foreground -y '0' -fn $font -dock &
fi
